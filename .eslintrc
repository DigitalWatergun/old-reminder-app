{
    "env": {
		"node": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
		"plugin:import/recommended",
		"plugin:react/recommended"
    ],
    "rules": {
		"react/prop-types": 0
	},
	"settings": {
		"import/resolver": {
			"node": {
			  "extensions": [".js", ".jsx"],
			  "moduleDirectory": ["node_modules", "src/"]
			}
		},
		"react": {
			"version": "detect"
		}
	}
}
